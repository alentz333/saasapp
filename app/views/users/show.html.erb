<body class="bg-color">
  <div class="container new-page"> 
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="well page-container">
          <div class="text-center">
          <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img img-circle' %><br/>
          <%= @user.profile.first_name %> <%= @user.profile.last_name %><br/>
          <%= @user.profile.job_title %><br/>
          <% if true #current_user.plan_id == 2 %>
            <%= @user.profile.phone_number %><br/>
            <%= @user.profile.email %><br/>
          <% end %>
          <%= @user.profile.description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>