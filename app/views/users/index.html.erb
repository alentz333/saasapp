<body>
  <div class="new-page">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 class="text-center">The Churn Community</h1>
          <p class="text-center">Welcome to the Churn community. Users must fill out a profile in order to be visible.</p></br>
          <ul class="list-unstyled">
            <% @users.each do |user| %>
              <% if user.profile %>
                <li>
                  <div class="row well <%= cycle('white-bg', '') %>">
                    <div class="col-md-4 text-centered">
                      <% if user.profile.avatar %>
                        <%= link_to user do %>
                          <%= image_tag user.profile.avatar.url, class: 'index-icon' %>
                        <% end %>
                      <% end %>
                    </div>
                    <div>
                      <%= link_to user do %>
                        <h2> <%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                      <% end %>
                      <p>
                        <%= user.profile.job_title %>
                        <% if user.plan_id == 2 %>
                          <span class="label label-danger">PRO</span>
                        <% end %>
                      </p>
                    </div>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
</body>