<% if user_signed_in? %>
  <body>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class-"well">
          <h2 class="text-center new-page">Create your URL!</h2>
          <% if current_user.profile %>
            <%#= link_to "Edit your profile", '#', class: 'btn btn-default btn-lg btn-block' %>
            <%#= link_to "View your profile", user_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
            <%= link_to "Create your profile", new_user_profile_path(user_id: current_user.id),  class: 'btn btn-default btn-lg btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
<% else %>
  <body class="bg-color">
    <div class="row">
      <div class="container">
        <div class="row home-title ">
          <h1 class="title font-cursive">Churn.io</h1>
          <h2 class="callout">Data hygiene, delivered.</h2>
        </div>
        <div class="container home-signup-links">
          <div class="col-md-3 col-md-offset-3">
            <div class="well">
              <h2 class="text-center">Basic Membership</h2>
              <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="well">
              <h2 class="text-center">Pro Membership</h2>
              <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
<% end %>
  

