<body class="bg-color">
  <div class="container new-page"> 
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well page-container">
            <% if params[:plan] == '2' %>
            <div class="text-center">
              <h1>Pro Account</h1>
              <p>Sign up for pro account for $10/month to create custom urls.</p>
            </div>
            <%= render"pro_form" %>
            <% else %>
            <div class="text-center">
              <h1>Basic Account</h1>
              <p>Sign up for basic account start building your url.</p>
            </div>
            <%= render"basic_form" %>
            <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>
